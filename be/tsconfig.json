{
  "compilerOptions": {
    "target": "ES2022",
    
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    
    "esModuleInterop": true, 
    
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    "rootDir": "./", 
    
    "outDir": "./dist" 
  },
  "include": ["server.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}